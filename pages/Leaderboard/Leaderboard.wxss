/* pages/Leaderboard/Leaderboard.wxss */
.container {
  padding: 20rpx;
}
.container .item {
  margin-bottom: 20rpx;
  width: 100%;
  height: 300rpx;
  /* background-color: blue; */
}
.itemImg {
  width: 300rpx;
  height: 300rpx;
  float: left;
}
.itemImg image {
  width: 300rpx;
  height: 300rpx;
}
.musicItem {
  float: right;
  width: 400rpx;
  height: 300rpx;
}
.musicItem li {
  padding-left: 10rpx;
  float: left;
  width: 500rpx;
  height: 100rpx;
  overflow: hidden;

}
.musicItem li text {
  font-size: 25rpx;
  overflow: hidden;
  line-height: 50rpx;
  width: 300rpx;
  height: 50rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.musicItem li .q{
  color: rgb(119, 121, 122);
  width: 100rpx;
  float: right;
  margin-right: 200rpx;
  text-align: right;
}